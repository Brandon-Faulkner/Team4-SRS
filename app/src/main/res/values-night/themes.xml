<resources>
    <!-- Base application theme. -->
    <style name="Theme.ServiceRequestSystem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorOnPrimary">@color/dark</item>
        <item name="android:colorForeground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="dialogCornerRadius">10dp</item>
    </style>
</resources>