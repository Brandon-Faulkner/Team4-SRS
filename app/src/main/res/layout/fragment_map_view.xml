<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapViewFragment">

    <!-- App Title Logo -->
    <ImageView
        android:id="@+id/app_title_logo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:padding="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/service_request_logo_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/field_max_width"
        app:layout_constraintWidth_percent="1" />

    <!-- Map Fragment Container -->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_title_logo"
        app:layout_constraintBottom_toTopOf="@id/trip_info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.75">


        <!-- Include MapView/MapFragment here -->
    </FrameLayout>

    <!-- Trip Information Layout -->
    <LinearLayout
        android:id="@+id/trip_info_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/map_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25">

        <!-- TextView for displaying trip information between the addresses -->
        <TextView
            android:id="@+id/text_trip_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip information will be displayed here."
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Button for opening Google Maps with the location -->
        <Button
            android:id="@+id/button_open_google_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open in Google Maps" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>