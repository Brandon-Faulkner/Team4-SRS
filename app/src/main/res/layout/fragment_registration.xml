<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.registration.RegistrationFragment">

    <ImageView
        android:id="@+id/app_title_logo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:padding="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/service_request_logo_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/field_max_width"
        app:layout_constraintWidth_percent="1" />

    <LinearLayout
        android:id="@+id/register_steps"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_title_logo">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/user_or_vendor_reg_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorOnPrimary"
            app:tabGravity="center"
            app:tabIndicatorGravity="bottom">

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/user_reg_title" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/vendor_reg_title" />

        </com.google.android.material.tabs.TabLayout>

        <ScrollView
            android:id="@+id/user_reg_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/user_reg_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_reg_profile_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:id="@+id/user_reg_profile_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/search_no_result_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:text="@string/reg_profile_section_title"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/user_reg_name_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_name_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_reg_name_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="name"
                                android:ems="10"
                                android:inputType="text|textPersonName|textAutoComplete|textAutoCorrect|textCapWords"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/user_reg_email_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_email_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_reg_email_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="emailAddress"
                                android:ems="10"
                                android:inputType="text|textEmailAddress|textAutoComplete"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/user_reg_phone_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_phone_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_reg_phone_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="phone"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/user_reg_add_state_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="true"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_reg_address_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".25"
                                android:hint="@string/reg_address_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_reg_address_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalAddress"
                                    android:ems="10"
                                    android:inputType="text|textPostalAddress|textAutoComplete|textCapWords"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_reg_state_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".75"
                                android:hint="@string/reg_state_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_reg_state_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalAddress"
                                    android:ems="10"
                                    android:inputType="text|textPostalAddress|textAutoComplete|textCapCharacters"
                                    android:maxLength="2"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textAllCaps="true"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/user_reg_city_zip_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="true"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_reg_city_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".4"
                                android:hint="@string/reg_city_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_reg_city_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalAddress"
                                    android:ems="10"
                                    android:inputType="text|textPostalAddress|textAutoComplete|textCapWords"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/user_reg_zipcode_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".6"
                                android:hint="@string/reg_zipcode_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/user_reg_zipcode_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalCode"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:maxLength="5"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_reg_login_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:id="@+id/user_reg_login_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_reg_login_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:text="@string/reg_login_section_title"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/user_reg_id_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_id_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_reg_id_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="username"
                                android:ems="10"
                                android:inputType="text"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/user_reg_id_hint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:text="@string/reg_id_hint"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="14sp"
                            tools:ignore="TextContrastCheck" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/user_reg_password_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_password_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/user_reg_password_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="password"
                                android:ems="10"
                                android:inputType="textVisiblePassword"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/user_reg_password_hint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:text="@string/reg_password_hint"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="14sp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_reg_vendor_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="10dp"
                    app:contentPadding="10dp">

                    <LinearLayout
                        android:id="@+id/user_reg_vendor_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_reg_vendor_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:text="@string/reg_vendor_section_title"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="20sp"
                            tools:ignore="TextContrastCheck" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/vendor_reg_comp_name_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_compName_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/vendor_reg_comp_name_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="name"
                                android:ems="10"
                                android:inputType="text|textAutoComplete|textCapWords"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/vendor_reg_comp_email_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_compEmail_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/vendor_reg_comp_email_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="emailAddress"
                                android:ems="10"
                                android:inputType="text|textEmailAddress|textAutoComplete"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/vendor_reg_comp_phone_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_compPhone_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/vendor_reg_comp_phone_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:autofillHints="phone"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/vendor_reg_add_state_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="true"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/vendor_reg_comp_address_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".25"
                                android:hint="@string/reg_compAddress_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/vendor_reg_comp_address_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalAddress"
                                    android:ems="10"
                                    android:inputType="text|textPostalAddress|textAutoComplete|textCapWords"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/vendor_reg_comp_state_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".75"
                                android:hint="@string/reg_state_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/vendor_reg_comp_state_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalAddress"
                                    android:ems="10"
                                    android:inputType="text|textPostalAddress|textAutoComplete|textCapCharacters"
                                    android:maxLength="2"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textAllCaps="true"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/vendor_reg_city_zip_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="true"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/vendor_reg_comp_city_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".4"
                                android:hint="@string/reg_city_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/vendor_reg_comp_city_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalAddress"
                                    android:ems="10"
                                    android:inputType="text|textPostalAddress|textAutoComplete|textCapWords"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/vendor_reg_comp_zipcode_layout"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="5dp"
                                android:layout_weight=".6"
                                android:hint="@string/reg_zipcode_title"
                                android:maxWidth="@dimen/field_max_width"
                                android:minHeight="50dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/vendor_reg_comp_zipcode_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:autofillHints="postalCode"
                                    android:ems="10"
                                    android:inputType="number"
                                    android:maxLength="5"
                                    android:paddingStart="@dimen/general_padding"
                                    android:paddingEnd="@dimen/general_padding"
                                    android:textColor="?android:attr/colorForeground"
                                    tools:ignore="TextContrastCheck" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/search_filter_service"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/view_outline"
                            android:gravity="center|start"
                            android:hint="@string/reg_services_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="55dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textAlignment="viewStart"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="16sp"
                            app:drawableRightCompat="@android:drawable/ic_menu_more"
                            tools:ignore="TextContrastCheck" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/vendor_reg_comp_charge_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:hint="@string/reg_services_charge_title"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/vendor_reg_comp_charge_input"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:digits="0123456789.,"
                                android:ems="10"
                                android:inputType="number"
                                android:paddingStart="@dimen/general_padding"
                                android:paddingEnd="@dimen/general_padding"
                                android:textColor="?android:attr/colorForeground"
                                tools:ignore="TextContrastCheck" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:id="@+id/vendor_reg_comp_charge_hint"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:text="@string/reg_services_charge_hint"
                            android:textColor="?android:attr/colorForeground"
                            android:textSize="14sp"
                            tools:ignore="TextContrastCheck" />

                        <CheckBox
                            android:id="@+id/vendor_reg_fee_check"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:maxWidth="@dimen/field_max_width"
                            android:minWidth="@dimen/field_max_width"
                            android:minHeight="50dp"
                            android:text="@string/reg_vendor_fee_desc"
                            android:textColor="?android:attr/colorForeground" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/search_btns_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/search_back_btn"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/general_cancel_title"
                        android:textSize="16sp"
                        tools:ignore="TextContrastCheck" />

                    <Button
                        android:id="@+id/search_search_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/general_submit_title"
                        android:textSize="16sp"
                        tools:ignore="ButtonStyle,TextContrastCheck" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>