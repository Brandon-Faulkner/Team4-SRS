<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/service_card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/service_card_vendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="80dp"
            android:text="@string/default_service_title"
            android:textColor="?android:attr/colorForeground"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/service_card_vendor_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="25dp"
            android:contentDescription="@string/default_service_rate_title"
            android:text="@string/default_service_rate_title"
            android:textColor="?android:attr/colorForeground"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/service_card_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/default_service_title"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/appliance_icon" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>