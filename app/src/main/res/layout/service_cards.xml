<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/service_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/service_card_holder_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="true"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/service_card_info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight=".25"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/service_card_vendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/default_service_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/service_card_vendor_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/default_service_phone_title"
                    android:text="@string/default_service_phone_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/service_card_vendor_services"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/default_service_services_title"
                    android:text="@string/default_service_services_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/service_card_vendor_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/default_service_rate_title"
                    android:text="@string/default_service_rate_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/service_card_vendor_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/default_service_address_title"
                    android:text="@string/default_service_address_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/service_card_vendor_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/search_filter_rating_title"
                    android:text="@string/search_filter_rating_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/service_card_vendor_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:contentDescription="@string/search_filter_date_title"
                    android:text="@string/search_filter_date_title"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/service_card_icon_btns_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".75"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/service_card_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/default_service_title"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/general_service_icon" />

                <Button
                    android:id="@+id/service_card_map_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/map_map_btn_title"
                    android:textSize="14sp"
                    tools:ignore="ButtonStyle,TextContrastCheck" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>