<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary"
    tools:context=".ui.dashboard.DashboardFragment">

    <ImageView
        android:id="@+id/app_title_logo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:padding="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/service_request_logo_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="@dimen/field_max_width"
        app:layout_constraintWidth_percent="1" />

    <!-- User Information Section -->
    <LinearLayout
        android:id="@+id/userInfoSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/app_title_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Replace with a CircleImageView or similar library for circular images -->
        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="@string/user_profile_pic"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/user_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname Lastname"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <!-- Dashboard Grid Options -->
    <GridLayout
        android:id="@+id/user_dashboard_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:columnOrderPreserved="false"
        android:padding="25dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoSection">

        <!-- Define buttons for grid items -->

        <!-- Make Payment Button -->
        <Button
            android:id="@+id/btnMakePayment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/payment"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="@string/make_payment"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground" />

        <!-- Cancel Request Button -->
        <Button
            android:id="@+id/btnCancelRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/cancel_req"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="@string/cancel_request"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground" />

        <!-- Change Request Button -->
        <Button
            android:id="@+id/btnChangeRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/change_req"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="@string/change_request"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground" />

        <!-- Order History Button -->
        <Button
            android:id="@+id/btnOrderHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/order_history"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/order_history"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground" />
        <!-- Map View Button -->
        <Button
            android:id="@+id/btnMapView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/map_view"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/map_view"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground" />
        <!-- Rewards Button -->
        <Button
            android:id="@+id/btnRewards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/rewards"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="@string/rewards"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorForeground" />

    </GridLayout>

    <!-- Service Provider Dashboard Grid -->
    <GridLayout
        android:id="@+id/serviceProviderDashboardGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="25dp"
        android:rowCount="4"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoSection">

        <!-- Service provider-specific buttons -->

        <!-- View Service Requests Button -->
        <Button
            android:id="@+id/btnViewServiceRequests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/quote_request"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="@string/view_service_requests"
            android:textColor="?android:attr/colorForeground" />

        <!-- Manage Appointments Button -->
        <Button
            android:id="@+id/btnManageAppointments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorOnPrimary"
            android:drawableTop="@drawable/manage_req"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="@string/manage_service_requests"
            android:textColor="?android:attr/colorForeground" />

    </GridLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/logout"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>